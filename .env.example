# MongoDB Configuration
MONGO_ROOT_USERNAME=your_mongo_root_username
MONGO_ROOT_PASSWORD=your_secure_mongo_root_password
MONGO_INITDB_DATABASE=your_database_name

# Application Database User
MONGODB_USER=your_app_user
MONGODB_PASSWORD=your_app_password

# MongoDB Express Configuration
MONGO_EXPRESS_USERNAME=your_mongo_express_username
MONGO_EXPRESS_PASSWORD=your_mongo_express_password

# Application Environment
NODE_ENV=production
PORT=3000

# Database Connection
MONGODB_URL=mongodb://username:password@mongo:27017/database?authSource=admin

# Instructions:
# 1. Copy this file to .env
# 2. Replace all placeholder values with secure, randomly generated passwords
# 3. Keep the .env file secure and never commit it to version control
